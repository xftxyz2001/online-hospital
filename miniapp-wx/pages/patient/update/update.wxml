<!--pages/patient/update/update.wxml-->
<view>
  <view style="width:100%;padding:10rpx 10rpx;color: #66B1FF;font-size: 28rpx;">
    <view>温馨提示:</view>
    <view style="margin-top:10rpx">当前页面仅可以手机号与地址信息</view>
  </view>
  <van-cell-group>
  <van-field
    value="{{ patientInfo.name }}"
    label="姓名"
    placeholder="未设置"
    disabled
  />
  <van-field
    value="{{ patientInfo.sex==0?'女':'男' }}"
    label="性别"
    placeholder="未设置"
    disabled
  />
  <van-field
    value="{{ patientInfo.certificatesType }}"
    label="证件类型"
    placeholder="未设置"
    disabled
  />
  <van-field
    value="{{ patientInfo.certificatesNo }}"
    label="证件号"
    placeholder="未设置"
    disabled
  />
  <van-field
    value="{{ patientInfo.cardNo}}"
    label="就诊卡号"
    placeholder="未设置"
    disabled
  />
  <van-field
    value="{{ patientInfo.birthdate}}"
    label="出生日期"
    placeholder="未设置"
    disabled
  />
  <van-field
    model:value="{{newPhone }}"
    label="手机号"
    placeholder="未设置"
    border="{{ false }}"
  />

  <van-field label="地址" value="{{newProvinceName}}-{{newCityName}}-{{newDistrictName}}" placeholder="请选择住址" border="{{ false }}" bind:tap="selectDistract" readonly />
  
  <van-area area-list="{{ areaList }}" value="{{newAreaCode}}" bind:change="changeArea" wx:if="{{areaDialogVisible}}" bind:confirm="confirmArea" bind:cancel="cancelArea" />
  <van-field label="详细地址" model:value="{{ newAreaDetail }}"  placeholder="未设置" autosize border="{{ false }}" />
</van-cell-group>
<view style="width: 100%;display: flex;flex-direction: column;align-items: center;margin-top: 30rpx;" ><view style="width: 95%;"><van-button type="primary" block bind:tap="confirm">确定</van-button></view></view>


</view>