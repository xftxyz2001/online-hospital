<!--index.wxml-->
<view style="width: 100%;min-height: 1400rpx;background-color: rgb(248, 248, 248);">
  <view style="margin-top: 10px;">
  <van-grid column-num="2">
  <van-grid-item icon="certificate" icon-color="green" text="预约挂号" bind:tap="toRegistration"/>
  <van-grid-item icon="comment-o" icon-color="blue" text="在线咨询"
  bind:tap="toInquiry"/>
</van-grid>

<view style="display: flex;flex-direction: column;align-items: center;padding: 10px 0 0 0;background-color: white;margin-top: 10px;">
<view style="width: 100%;padding:0 0 10px 20px"><van-icon name="apps-o" color="#409EFF" style="margin-right: 5px;"/>更多服务</view>
<view style="width: 100%;">
  <van-grid column-num="3">
 
  <van-grid-item icon="search" icon-color="#409EFF" text="查报告" bind:tap="toReport"/>
  <van-grid-item icon="wap-home-o" icon-color="#409EFF" text="医院简介" bind:tap="toHospitalInfo"/>
  <van-grid-item icon="label-o" icon-color="#409EFF" text="科室介绍" 
  bind:tap="toOutpatientInfo"/>
  <van-grid-item icon="manager-o" icon-color="#409EFF" text="专家介绍"
  bind:tap="toDoctorInfo"/>
  <van-grid-item icon="description-o" icon-color="#409EFF" text="自助开单" bind:tap="toBill"/>
</van-grid>

</view>
</view>
</view>
<van-toast id="van-toast" />


</view>

